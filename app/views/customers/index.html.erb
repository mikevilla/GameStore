<h1>Listing customers</h1>
<h3><a href="/admin/menu">Administration Home Page</a></h3>

<table>
  <tr>
    <th>Id</th>
    <th>Created at</th>
    <th>Updated at</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Zip code</th>
  </tr>

<% @customers.each do |customer| %>
  <tr>
    <td><%=h customer.id %></td>
    <td><%=h customer.created_at %></td>
    <td><%=h customer.updated_at %></td>
    <td><%=h customer.first_name %></td>
    <td><%=h customer.last_name %></td>
    <td><%=h customer.zip_code %></td>
    <td class="show"><%= link_to 'Show', customer %></td>
    <td class="edit"><%= link_to 'Edit', edit_customer_path(customer) %></td>
    <td class="destroy"><%= link_to 'Destroy', customer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New customer', new_customer_path %>